    "title": "System Overview - Ignition Web HMI",
    "backgroundColor": "#1e1e1e",
    "padding": "20px"
  },
  "params": {
    "refreshRate": {
      "type": "number",
      "defaultValue": 1000,
      "metadata": {
        "min": 500,
        "max": 10000
      }
    }
  },
  "root": {
    "type": "container",
